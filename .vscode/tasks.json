     {
       "label": "prose",
       "type": "gulp",
       "task": "prose",

       "problemMatcher": {
         "owner": "prose",
         "source": "prose-lint",
         "severity": "warning",
         "fileLocation": ["relative", "${workspaceFolder}/src"],
         "pattern": [{
           "regexp": "'(.+)' (\\d+):(\\d+):(\\d+) (.*)",
           "file": 1,
           "line": 2,
           "column": 3,
           "endColumn": 4,
           "message": 5
         }]
       }
     }
   ]
 }
